.container
  .row.justify-content-md-center
    %h1 Edit Teacher
    %a.btn.btn-primary{href: "/teachers/", style: "float:right"} Teachers Index
  %br
  .row
  = form_for @teacher do |f|
    .card
      .card-body
        .mb-3
          = f.label :name, { class: "form-label"}
          = f.text_field :name, { class: "form-control", placeholder: "Name" }
        %br
        .mb-3
          = f.label :school, { class: "form-label"}
          = f.text_field :school, { class: "form-control", placeholder: "School" }
        %br
        .mb-3
          = f.label :year, { class: "form-label"}
          = f.text_field :year, { class: "form-control", placeholder: "Year" }
        %br
        = f.submit "Submit", class: "btn btn-primary"